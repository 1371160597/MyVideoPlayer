<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="20dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/video_recycler_item2_photo"
            android:layout_width="match_parent"
            android:src="@drawable/test"
            android:scaleType="fitCenter"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/video_recycler_item2_right_corner"
            android:layout_alignRight="@id/video_recycler_item2_photo"
            android:layout_alignTop="@id/video_recycler_item2_photo"
            android:textColor="@color/colorWhite"
            android:layout_marginRight="5dp"
            android:padding="2dp"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/video_recycler_item2_right_text"
            android:layout_alignRight="@id/video_recycler_item2_photo"
            android:layout_alignBottom="@id/video_recycler_item2_photo"
            android:textColor="@color/colorWhite"
            android:layout_marginRight="5dp"
            android:textSize="12sp"
            android:gravity="center"
            android:padding="2dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:paddingLeft="3dp"
        android:id="@+id/video_recycler_item2_title_big"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>