<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="3dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="80dp">
        <ImageView
            android:id="@+id/video_message_type5_image"
            android:layout_width="match_parent"
            android:src="@drawable/test"
            android:scaleType="fitCenter"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/video_message_type5_right_corner"
            android:layout_alignRight="@id/video_message_type5_image"
            android:layout_alignTop="@id/video_message_type5_image"
            android:textColor="@color/colorWhite"
            android:layout_marginRight="5dp"
            android:padding="2dp"
            android:gravity="center"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/video_message_type5_right_text"
            android:layout_alignRight="@id/video_message_type5_image"
            android:layout_alignBottom="@id/video_message_type5_image"
            android:textColor="@color/colorWhite"
            android:background="@drawable/video_recycler_item_update_info"
            android:layout_marginRight="5dp"
            android:textSize="10sp"
            android:gravity="center"
            android:padding="2dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:paddingLeft="3dp"
        android:paddingTop="5dp"
        android:id="@+id/video_message_type5_title"
        android:textSize="14sp"
        android:layout_width="150dp"
        android:layout_height="wrap_content" />
</LinearLayout>